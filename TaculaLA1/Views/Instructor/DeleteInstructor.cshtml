@model TaculaLA1.Models.Instructor

<h2>Are you sure you want to delete this instructor?</h2>

<form asp-action="DeleteInstructor" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="IsTenured">Status</label>
        <select asp-for="IsTenured" class="form-control" disabled>
            <option value="@Model.IsTenured">@Model.IsTenured</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Rank">Rank</label>
        <select asp-for="Rank" class="form-control" disabled>
            <option value="@Model.Rank">@Model.Rank</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="HiringDate">Hiring Date</label>
        <input asp-for="HiringDate" class="form-control" disabled />
    </div>

    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
