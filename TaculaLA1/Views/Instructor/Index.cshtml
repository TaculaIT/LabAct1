<div>Instructor List</div>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Status</th>
            <th>Rank</th>
            <th>Hiring Date</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var instructor in Model)
        {
            <tr>
                <td>@instructor.Id</td>
                <td>@instructor.FirstName</td>
                <td>@instructor.LastName</td>
                <td>@instructor.IsTenured</td>
                <td>@instructor.Rank</td>
                <td>@instructor.HiringDate</td>
                <td><a asp-action="ShowDetail" asp-route-id="@instructor.Id">Show Details</a></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@instructor.Id" class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@instructor.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("AddInstructor", "Instructor")" class="btn btn-primary">Add Instructor</a>
