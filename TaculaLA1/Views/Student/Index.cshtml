@model List<TaculaLA1.Models.Student>

<h2>Student List</h2>

<table class="table table-striped table-dark">
    <!-- Table  -->
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Course</th>
            <th>Date Enrolled</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <!-- Loop -->
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Course</td>
                <td>@student.DateEnrolled.ToShortDateString()</td>
                <td><a asp-action="ShowDetail" asp-route-id="@student.Id">Show Details</a></td>
                <td>
                <td>
                    <a asp-action="EditStudent" asp-route-id="@student.Id">Edit Student</a>
                </td>
                </td>
                <td>
                <td>
                    <a asp-action="DeleteConfirmation" asp-route-id="@student.Id" class="btn btn-danger">Delete</a>
                </td>

                
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("AddStudent", "Student")" class="btn btn-primary">Add Student</a>
