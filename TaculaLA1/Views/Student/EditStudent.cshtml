@model TaculaLA1.Models.Student

<h2>Edit Student</h2>

<form asp-action="EditStudent" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Course">Course</label>
        <input asp-for="Course" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DateEnrolled">Date Enrolled</label>
        <input asp-for="DateEnrolled" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update Student</button>
</form>
